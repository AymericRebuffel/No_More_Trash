<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <fragment
        android:layout_marginTop="4dp"
        android:id="@+id/FragmentInterface"
        android:name="com.example.no_more_trash.fragment.FragmentInterface"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="5">
        <fragment
            android:id="@+id/FragmentList"
            android:name="com.example.no_more_trash.fragment.FragmentButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <fragment
            android:id="@+id/fluxweb"
            android:name="com.example.no_more_trash.fragment.FragmentWeb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"/>
    </LinearLayout>

</LinearLayout>


