<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/Titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="126dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="126dp"
        android:text="No More Trash"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoSession"
        app:layout_constraintVertical_weight="6" />

    <ImageView
        android:id="@+id/icon_param"
        android:layout_width="54dp"
        android:layout_height="39dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@id/Titre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_param" />

    <ImageView
        android:id="@+id/icon_user"
        android:layout_width="44dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintEnd_toStartOf="@+id/infoSession"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_user" />

    <TextView
        android:id="@+id/infoSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:text="Interface Utilisateur"
        android:textColor="#7CFC00"
        app:layout_constraintStart_toEndOf="@+id/icon_user"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/decharge"
        android:layout_width="285dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="5dp"
        android:background="#66CD00"
        android:text="Les déchets aux alentours"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/dechetterie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_param" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dechetterie"
        android:layout_width="285dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#F4A460"
        android:text="Je déclare un déchet"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonDechetterie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decharge" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonDechetterie"
        android:layout_width="285dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="60dp"
        android:background="#F0FFFF"
        android:text="Je déclare une decheterie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dechetterie" />

    <fragment
        android:id="@+id/fluxweb"
        android:name="com.example.no_more_trash.activities.FragmentWeb"
        android:layout_width="285dp"
        android:layout_height="fill_parent"
        android:layout_marginStart="228dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/dechetterie"
        app:layout_constraintTop_toBottomOf="@+id/icon_param"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>


