<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Titre"
        android:layout_width="347dp"
        android:layout_height="73dp"
        android:layout_marginTop="4dp"
        android:autoSizeTextType="uniform"
        android:text="Entrez le nom de la decheterie:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/iddecharge"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="nom ?"
        app:layout_constraintTop_toBottomOf="@+id/Titre"
        tools:layout_editor_absoluteX="0dp" />

    <fragment
        android:id="@+id/FragmentPhoto"
        android:name="com.example.no_more_trash.fragment.formulaire.FragmentPhoto"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layout_marginTop="128dp"
        android:layout_marginBottom="215dp"
        app:layout_constraintBottom_toTopOf="@+id/ValidationD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iddecharge" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ValidationD"
        android:layout_width="148dp"
        android:layout_height="47dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="10dp"
        android:text="OK"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>