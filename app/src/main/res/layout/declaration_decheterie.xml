<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">

        <TextView
            android:id="@+id/Titre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:autoSizeTextType="uniform"
            android:text="Entrez le nom de la decheterie:"
            android:textAlignment="center"
            android:layout_weight="1"/>


        <EditText
            android:id="@+id/iddecharge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:autoSizeTextType="uniform"
            android:hint="Nom de la dechetterie ?"
            android:layout_weight="1" />
    </LinearLayout>

    <fragment
        android:id="@+id/FragmentPhoto"
        android:name="com.example.no_more_trash.fragment.formulaire.FragmentPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"/>

    <Button
        android:id="@+id/ValidationD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="OK"
        android:textSize="12dp"
        android:layout_weight="1"/>

</LinearLayout>