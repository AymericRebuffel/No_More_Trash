<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <Button
        android:id="@+id/decharge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#66CD00"
        android:text="Les déchets aux alentours"
        android:textSize="12dp"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/dechetterie"
        android:text="Je déclare un déchet"
        android:textSize="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#F4A460"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/buttonDechetterie"
        android:text="Je déclare une decheterie"
        android:textSize="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#F0FFFF"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"/>



</LinearLayout>