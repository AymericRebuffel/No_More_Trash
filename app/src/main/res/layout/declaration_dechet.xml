<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Titre"
        android:layout_width="347dp"
        android:layout_height="73dp"
        android:layout_marginTop="4dp"
        android:autoSizeTextType="uniform"
        android:text="Déclarer un déchet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Infos"
        android:layout_width="312dp"
        android:layout_height="59dp"
        android:layout_marginTop="80dp"
        android:autoSizeTextType="uniform"
        android:text="Prenez une photo du déchet, remplissez le formulaire puis appuyez sur OK."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground"
        tools:ignore="VectorDrawableCompat" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Photo"
        android:layout_width="148dp"
        android:layout_height="47dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="228dp"
        android:layout_marginBottom="450dp"
        android:text="Prendre une photo"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Infos" />

    <TextView
        android:id="@+id/Taille"
        android:layout_width="196dp"
        android:layout_height="34dp"
        android:layout_marginTop="340dp"
        android:autoSizeTextType="uniform"
        android:text="Taille du dechet :"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinnerTaille"
        android:layout_width="247dp"
        android:layout_height="43dp"
        android:layout_marginStart="96dp"
        android:entries="@array/tailles"
        android:prompt="@string/taille_dechet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Taille"
        tools:ignore="MissingConstraints" />

    <Spinner
        android:id="@+id/spinnerType"
        android:layout_width="247dp"
        android:layout_height="43dp"
        android:layout_marginStart="96dp"
        android:entries="@array/types"
        android:prompt="@string/type_dechet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Type"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Type"
        android:layout_width="196dp"
        android:layout_height="34dp"
        android:layout_marginTop="45dp"
        android:autoSizeTextType="uniform"
        android:text="Type de dechet :"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerTaille"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Validation"
        android:layout_width="148dp"
        android:layout_height="47dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="10dp"
        android:text="OK"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>